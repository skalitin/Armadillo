@using Armadillo.Shared

@if (Product != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                @if(ShowCustomers) { <th>Customer</th>  }
                @if(ShowOwners) {  <th>Owner</th> }
                <th>Level</th>
                <th>Status</th>
                <th>Created</th>
                <th>Last Update</th>
            </tr>
        </thead>
         <tbody>
            @foreach (var subcase in Product.Subcases)
            {

                <tr>
                    <td><a target="_blank" href="@subcase.DetailsLink">@subcase.Id</a></td>
                    <td>@subcase.Title</td>
                    @if(ShowCustomers) { <td>@subcase.Customer</td> }
                    @if(ShowOwners) { <td>@subcase.Owner</td> }
                    <td>@subcase.Level</td>
                    <td>@subcase.Status</td>
                    <td>@subcase.Created</td>
                    <td>@subcase.LastUpdate</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    [Parameter]
    public Product Product { get; set; }

    [Parameter]
    public bool ShowCustomers { get; set; }
    
    [Parameter]
    public bool ShowOwners { get; set; }
}
